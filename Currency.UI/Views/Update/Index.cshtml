@model IEnumerable<Currency.Data.Tbl_exchange_rates>

@{
    ViewBag.Title = "Index";

}



<body>
    <table class="container">
        <thead>
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.CurrencyCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Unit)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CurrencyName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ForexBuying)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ForexSelling)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BanknoteBuying)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BanknoteSelling)
                </th>

                <th style="width:150px;"> </th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tbody>
                <tr>
                    <td><span class="flags" style="float: left"><img src="~/Theme/img/@(item.CurrencyCode).png" height=25 width=30></span>@item.CurrencyCode / &#8378;</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Unit)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CurrencyName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ForexBuying)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ForexSelling)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BanknoteBuying)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BanknoteSelling)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-primary btn-sm" })
                    </td>
                </tr>
            </tbody>
        }

    </table>
</body>